SELECT us.id_usuario,us.username,us.nombre_usuario,us.foto_usuario,
            tp.id_tipo_usuario,tp.nombre_tipo_usuario
            FROM usuario us
            LEFT JOIN tipo_usuario tp
            ON us.tipo_usuario = tp.id_tipo_usuario
            where us.id_usuario = 1 and tipo_usuario = 1
			
			
			
SELECT us.id_usuario,us.username,us.nombre_usuario,us.foto_usuario,
            tp.id_tipo_usuario,tp.nombre_tipo_usuario
            FROM usuario us
            LEFT JOIN tipo_usuario tp
            ON us.tipo_usuario = tp.id_tipo_usuario
            where us.id_usuario = 2 and tipo_usuario = 1
